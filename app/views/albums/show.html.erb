<h5><%= @album.name %>/<%= link_to @artist.name, "/artists/#{@artist.id}" %></h5>
<% if @album.average_score.nan? %>
	<% average_score = "-" %>
<% else %>
	<% average_score = @album.average_score %>
<% end %>
<p>スコア: <%= average_score %>/10 &emsp;
<% if current_user %>
	<%= link_to "編集", "/artists/#{@artist.id}/albums/#{@album.id}/edit" %>
<% end %>
</p>
<% if @album.apple %>
	<% if @album.apple.length != 0 %>
		<iframe allow="autoplay *; encrypted-media *;" frameborder="0" height=300" style="width:100%;max-width:660px;overflow:hidden;background:transparent;" sandbox="allow-forms allow-popups allow-same-origin allow-scripts allow-storage-access-by-user-activation allow-top-navigation-by-user-activation" src="<%= @album.apple.sub("music.apple.com","embed.music.apple.com") %>"></iframe>
	<% end %>
<% end %>
<br />
<% if @album.spotify %>
	<% if @album.spotify.length != 0  %>
		<%= link_to "Spotify", @album.spotify, class: "btn-small light-green-text grey darken-3" %>
	<% end %>
<% end %>
<% if @album.bandcamp %>
	<% if @album.bandcamp.length != 0 %>
		<%= link_to "Bandcamp", @album.bandcamp, class: "btn-small light-blue darken-3" %>
	<% end %>
<% end %>
<% if @album.wikipedia %>
	<% if @album.wikipedia.length != 0 %>
		<%= link_to "Wiki", @album.wikipedia, class: "btn-small blue-grey lighten-5 black-text" %>
	<% end %>
<% end %>
<br />
<br />
<div class="divider"></div>

<h6>ブログ/レビュー &emsp;<%= link_to "投稿", "/artists/#{@artist.id}/albums/#{@album.id}/new", class: "btn-small" %></h6>
<div class="row">
	<% @posts.each do |post| %>
		<div class="col s12 m6">
			<div class="card">
				<div class="card-content">
					<span class="card-title"><%= post.summary %></span>
					<% if post.score %>
						<div><%= post.score %>/10</div>
					<% else %>
						<div class="blue-grey-text">-/10</div>
					<% end %>
					<div>Reviewed by <strong><a href="/users/<%= post.user.id %>"><%= post.user.username %></a></strong></div>
				</div>
				<div class="card-action">
					<small>
						<% if current_user %>
							<% if current_user.already_liked?(post) %>
								<%= link_to '評価済', "/artists/#{post.artist.id}/albums/#{post.album.id}/#{post.id}/unlike", method: :post, return_url: request.original_url, class: "blue-grey-text" %>
							<% else %>
								<%= link_to '評価⬆︎', "/artists/#{post.artist.id}/albums/#{post.album.id}/#{post.id}/like", method: :post, return_url: request.original_url %>
							<% end %>
						<% end %>
						<a href="#">後で読む</a>
						<% if post.comment_flg or post.content %>
							<% if post.content.length != 0 %>
								<a href=<%= "/artists/#{@artist.id}/albums/#{@album.id}/#{post.id}" %>>レビューを読む</a>
							<% elsif post.comment_flg %>
								<a href=<%= "/artists/#{@artist.id}/albums/#{@album.id}/#{post.id}" %>>コメント</a>
							<% end %>
						<% end %>
						<% if post.blog_url.length != 0 %>
							<a href="<%= post.blog_url %>" class="red-text">ブログを読む</a>
						<% end %>
						<% if current_user %>
							<% if current_user.id == post.user.id %>
								<a href=<%= "/artists/#{@artist.id}/albums/#{@album.id}/#{post.id}/edit" %>>編集</a>
							<% end %>
						<% end %>
					</small>
				</div>
			</div>
		</div>
	<% end %>
</div>