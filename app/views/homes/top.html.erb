<h5>PICKUP REVIEW</h5>
<div class="row">
  <% @posts.each do |post| %>
    <div class="col s12 m6">
      <div class="card">
        <div class="card-content">
          <p><% if post.album %><%= link_to post.album.name, artist_album_path(post.artist.id,post.album.id) %><br />/<% end %><%= link_to post.artist.name, artist_path(post.artist.id) %></p>
          <br />
          <span class="card-title"><%= post.summary %></span>
          <% if post.score %>
            <div><%= post.score %>/10</div>
          <% else %>
            <div class="blue-grey-text">-/10</div>
          <% end %>
          <div>Reviewed by <strong><a href="/users/<%= post.user.id %>"><%= post.user.username %></a></strong></div>
        </div>
        <div class="card-action">
          <small>
            <% if current_user %>
              <div id="like-<%= post.id %>">
                <%= render partial: "like", locals: { post: post } %>
              </div>
            <% end %>
            <a href="#">後で読む</a>
            <% if post.comment_flg or post.content %>
              <% if post.content.length != 0 %>
                <a href=<%=  post.post_path %>>レビューを読む</a>
              <% elsif post.comment_flg %>
                <a href=<%=  post.post_path %>>コメント</a>
              <% end %>
            <% end %>
            <% if post.blog_url.length != 0 %>
              <a href="<%= post.blog_url %>" class="red-text">ブログを読む</a>
            <% end %>
            <% if current_user %>
              <% if current_user.id == post.user.id %>
                <a href=<%=  post.post_path + "/edit" %>>編集</a>
              <% end %>
            <% end %>
          </small>
        </div>
      </div>
    </div>
  <% end %>
</div>